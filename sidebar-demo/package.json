{
  "name": "sidebar-demo",
  "displayName": "sidebar-demo",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidebarDemo",
          "title": "Sidebar Demo",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "sidebarDemo": [
        {
          "id": "sidebarDemoView",
          "name": "Sidebar Demo View"
        }
      ]
    },
    "commands": [
      {
        "command": "sidebarDemo.openFile",
        "title": "Open File"
      },
      {
        "command": "sidebarDemo.saveComment",
        "title": "Save Comment",
        "icon": "$(save)"
      }
    ],
    "menus": {
      "comments/commentThread/context": [
        {
          "command": "sidebarDemo.saveComment",
          "group": "inline@1",
          "when": "commentThreadIsEmpty"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
